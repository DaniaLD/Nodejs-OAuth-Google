<% include ./partials/html-top.ejs %>
<div class="container">
    <nav class="navbar navbar-light justify-content-start" style="background-color: #dddddd;">
        <a href="/">
            <button class="btn btn-outline-primary">Home</button>
        </a>
        <% if(!user) { %>
        <a href="/auth/login">
            <button class="btn btn-outline-primary">Log in</button>
        </a>
        <% } %>
        <% if(user) { %>
        <a href="/auth/logout">
            <button class="btn btn-outline-primary">Log out</button>
        </a>
        <a href="/profile">
            <button class="btn btn-outline-primary active">Profile</button>
        </a>        
        <% } %>
    </nav>
    <div class="row justify-content-center home-header">
        <h3 class="col-lg-6" style="text-align: center;">Welcome to your profile, <%= user.username %></h3>
    </div>
    <hr>
</div>
<% include ./partials/html-bottom.ejs %>